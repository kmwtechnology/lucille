<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}${file.separator}resources</directory>
      <outputDirectory>resources</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}${file.separator}conf</directory>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}${file.separator}scripts</directory>
      <outputDirectory>scripts</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}${file.separator}lib</directory>
      <outputDirectory>lib</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
</assembly>
